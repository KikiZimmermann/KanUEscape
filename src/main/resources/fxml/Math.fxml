<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.ac.hcw.kanuescape.controller.MathController"
            prefWidth="720" prefHeight="520">

    <top>
        <VBox spacing="6" BorderPane.alignment="CENTER">
            <Label text="Math Quiz!" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="progressLabel" text="Question 1/6"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox spacing="12" style="-fx-padding: 16;">
            <Label fx:id="questionLabel"
                   wrapText="true"
                   style="-fx-font-size: 16px;" />

            <ImageView fx:id="questionImage"
                       fitWidth="520"
                       preserveRatio="true"
                       visible="false"
                       managed="false" />

            <VBox fx:id="optionsBox" spacing="8">
                <RadioButton fx:id="optA" text="A) :::" wrapText="true"/>
                <RadioButton fx:id="optB" text="B) :::" wrapText="true"/>
                <RadioButton fx:id="optC" text="C) :::" wrapText="true"/>
                <RadioButton fx:id="optD" text="D) :::" wrapText="true"/>
            </VBox>

            <Label fx:id="statusLabel" text="" wrapText="true"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding:12;" BorderPane.alignment="CENTER_RIGHT">
            <Button fx:id="backBtn" text="Back" onAction="#onBack"/>
            <Button fx:id="nextBtn" text="Next" onAction="#onNext"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="checkBtn" text="Check Result" onAction="#onCheck"/>
        </HBox>
    </bottom>

</BorderPane>
