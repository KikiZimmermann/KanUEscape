<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="startRoot"
           alignment="CENTER"
           maxWidth="Infinity"
           maxHeight="Infinity"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="at.ac.hcw.kanuescape.controller.ui.StartScreenController">

   <children>

      <Pane maxWidth="Infinity" maxHeight="Infinity"
            style="-fx-background-color: rgba(0,0,0,0.75);" />


      <StackPane alignment="CENTER">

         <children>

            <ImageView fitWidth="600.0"
                       preserveRatio="true"
                       smooth="false">
               <image>
                  <Image url="@../../assets/images/ui/menu.png" />
               </image></ImageView>

            <VBox alignment="CENTER" spacing="18">

               <Label text="KanUEscape ?"
                      textFill="WHITE"  translateY="-20">
                  <font>
                     <Font size="24.0"/>
                  </font>
               </Label>

               <children>

                  <Button text="Start"
                          onAction="#onStartClicked"
                          contentDisplay = "CENTER"
                          mnemonicParsing="false"
                          style="-fx-background-color: transparent; -fx-padding: 0;"
                          textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="30.0"
                                   fitWidth="200.0"
                                   preserveRatio="true"
                                   smooth="false">
                           <image>
                              <Image url="@../../assets/images/ui/button_transparent.png" />
                           </image></ImageView>
                     </graphic>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>



               </children></VBox>
         </children></StackPane>
   </children>
</StackPane>
